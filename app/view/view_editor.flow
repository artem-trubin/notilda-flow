import app/note/note;
import app/state/state;

export {
  makeViewEditor(
    state : NotildaState,
  ) -> Material;
}

makeViewEditor(
  state : NotildaState,
) -> Material {
  MSelect(state.currentNoteB, \note -> {
    noteTitleB = make(note.title);
    noteTextB = make(note.text);

    titleInput = MTextInput(
      noteTitleB,
      [],
      [],
    );

    textInput = MTextInput(
      noteTextB,
      [
        Multiline(true),
        MMaxLines(10),
        MOutlined(),
      ],
      []
    );

    MLinesA([
      titleInput,
      textInput,
    ])
  });
}
