import material/material;

import app/note/note;

export {
  makeNoteCard(
    note : Note,
    openNote : (note : Note) -> void,
  ) -> MCard;
}

makeNoteCard(
  note : Note,
  openNote : (note : Note) -> void,
) -> MCard {
  noteText = MSupportingTextBlock(
    note.text,
    []
  );

  onClick = \ -> openNote(note);

  style = [
    MCardWidth(256.0),
  ];

  MCard([noteText], style, [MOnClick(onClick)]);
}
