import material/material;

import app/note/note;

export {
  makeNoteCard(
    note : Note,
    openNote : (note : Note) -> void,
  ) -> MCard;
}

makeNoteCard(
  note : Note,
  openNote : (note : Note) -> void,
) -> MCard {
  noteContent = MPrimaryTextBlock(
    note.title,
    note.text,
    [],
  );

  onClick = \ -> openNote(note);

  style = [
    MCardWidth(256.0),
  ];

  MCard([noteContent], style, [MOnClick(onClick)]);
}
