import material/material;

import app/note/note;

export {
  makeNoteCard(
    note : Note,
    onClick : () -> void,
  ) -> MCard;
}

makeNoteCard(
  note : Note,
  onClick : () -> void,
) -> MCard {
  noteText = MSupportingTextBlock(
    note.text,
    []
  );

  style = [
    MCardWidth(256.0),
  ];

  MCard([noteText], style, [MOnClick(onClick)]);
}
