import math/crypto;

export {
  Note(
    id : string,
    text : string,
  );
}

Note(
  id : string,
  text : string,
);

makeNoteCard(note : Note) -> MCard {
  noteText = MSupportingTextBlock(
    note.text,
    []
  );

  blocks = [noteText];

  MCard(blocks, [], [])
}

createNote(
  text : string,
  onDone : (Note) -> void
) -> void {
  newId = generateUID("", "", 16);
  note = Note(newId, text);

  onDone(note)
}
