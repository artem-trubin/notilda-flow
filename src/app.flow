import material/material;

export {
  makeApp() -> Material;
}

makeHeader(leftNavExpander : DynamicBehaviour<bool>) -> MAppBar {
  title = MText("Notilda", []);
  rightElems = [];
  style = [];

  toolBar = MToolbar(leftNavExpander, title, rightElems, style);

  MAppBar(toolBar);
}

makeApp() -> Material {
  leftNavExpander = make(false);

  header = makeHeader(leftNavExpander);
  leftNav = MLeftNav(
    MText("This is left nav", []),
    leftNavExpander,
    []
  );
  content = MContent(MText("This is content", []));

  MAppStructure([header, leftNav, content], []);
}
