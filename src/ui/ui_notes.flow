import material/material;

import src/data/data_structs;

export {
  makeNoteCard(note : Note) -> MCard;
}

makeNoteCard(note : Note) -> MCard {
  noteText = MSupportingTextBlock(
    note.text,
    []
  );

  blocks = [noteText];

  MCard(blocks, style, state)
};

