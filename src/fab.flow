import material/material;

export {
  makeFab() -> MFloatingButton;
}

makeFab() -> MFloatingButton {
  icon = "add";
  style = [MBottom(), MRight(), makeFabSpeedDial()];
  state = [];

  MFloatingButton(icon, style, state)
}

makeFabSpeedDial() -> MFabSpeedDial {
  label = "Close";
  style = [];

  createNewNoteBtn = MFabIconButton(
    "note_add",
    "Create Note",
    \ -> println("Note Created"),
    []
  );

  MFabSpeedDial(label, [createNewNoteBtn], style)
}
