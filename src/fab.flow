import material/material;

import src/notes;

export {
  makeFab(manager : MaterialManager) -> MFloatingButton;
}

makeFab(manager : MaterialManager) -> MFloatingButton {
  icon = "add";
  style = [MBottom(), MRight(), makeFabSpeedDial(manager)];
  state = [];

  MFloatingButton(icon, style, state)
}

makeFabSpeedDial(manager : MaterialManager) -> MFabSpeedDial {
  label = "Close";
  style = [];

  createNewNoteBtn = MFabIconButton(
    "note_add",
    "Create Note",
    // \ -> makeAddNoteDialog(manager),
    \ -> {},
    []
  );

  MFabSpeedDial(label, [createNewNoteBtn], style)
}
